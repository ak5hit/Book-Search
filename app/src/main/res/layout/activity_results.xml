<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.techbug.booksearch.ResultsActivity">

    <ListView
        android:id="@+id/books_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <View
        android:id="@+id/dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_book_found"
        style="@style/EmptyActivityDisplayTextStyle"
        android:text="@string/no_book_found_text" />

    <TextView
        android:id="@+id/internet_connection"
        style="@style/EmptyActivityDisplayTextStyle"
        android:text="@string/check_internet_connection_text" />

</RelativeLayout>
